model Quiz {
  id       Int      @id @default(autoincrement())
  title     String
  questions Question[]
  createdAt DateTime @default(now())
}

model Question {
  id        Int      @id @default(autoincrement())
  text      String

  type      String

  quiz      Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  quizId    Int

  choices   String?
  createdAt DateTime @default(now())
}